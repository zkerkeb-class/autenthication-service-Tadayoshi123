{
  "name": "authentication-service",
  "version": "1.0.0",
  "description": "Microservice d'authentification OAuth2/OpenID Connect",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:init": "node src/scripts/generate-keys.js",
    "seed": "node src/scripts/seed.js",
    "validate-config": "node src/scripts/validate-config.js",
    "generate-secrets": "node src/scripts/generate-secrets.js",
    "setup": "npm run validate-config && npm run db:init",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "keys:gen": "node src/scripts/generate-keys.js",
    "secrets:gen": "node src/scripts/generate-secrets.js",
    "db:seed": "node src/scripts/seed.js",
    "validate:config": "node src/scripts/validate-config.js",
    "swagger:gen": "node scripts/generate-swagger.js",
    "docker:build": "docker build -t supervia-auth-service .",
    "docker:run": "docker run -p 3001:3001 --env-file .env supervia-auth-service"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^4.8.0",
    "axios": "^1.7.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-prom-bundle": "^8.0.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.1",
    "generate-password": "^1.7.1",
    "helmet": "^8.1.0",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "pino": "^8.21.0",
    "pino-http": "^9.0.0",
    "prom-client": "^15.1.2",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^11.1.0",
    "swagger-jsdoc": "^6.2.8",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "supervia"
  ]
}
